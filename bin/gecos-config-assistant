import sys
import os
import subprocess
import logging
import traceback

import gettext
from gettext import gettext as _

MOCK_TEST_CLASSES = False

# Add project root directory (enable symlink and trunk execution)
PROJECT_ROOT_DIRECTORY = os.path.abspath(
    os.path.dirname(os.path.dirname(os.path.realpath(sys.argv[0]))))

python_path = []
if os.path.abspath(__file__).startswith('/opt'):
    syspath = sys.path[:] # copy to avoid infinite loop in pending objects
    for path in syspath:
        opt_path = path.replace('/usr', '/opt/extras.ubuntu.com/firstboot')
        python_path.insert(0, opt_path)
        sys.path.insert(0, opt_path)

if (os.path.exists(os.path.join(PROJECT_ROOT_DIRECTORY, 'firstboot_lib'))
    and PROJECT_ROOT_DIRECTORY not in sys.path):
    python_path.insert(0, PROJECT_ROOT_DIRECTORY)
    sys.path.insert(0, PROJECT_ROOT_DIRECTORY)

if python_path:
    os.putenv('PYTHONPATH', "%s:%s" % (os.getenv('PYTHONPATH', ''), ':'.join(python_path))) # for subprocesses

from firstboot_lib.firstbootconfig import get_prefix
from util.PackageManager import PackageManager

if get_prefix() == '/usr/local':
    gettext.bindtextdomain('gecosws-config-assistant', '/usr/local/share/locale')
elif get_prefix() == '/usr':
    gettext.textdomain('gecosws-config-assistant')

#def fix_psmouse():
#    ''' There's a bug with the module psmouse, the trackpad stop working.
#    Thanks to apinel@emergya.com for the pointer.
#    See https://answers.launchpad.net/ubuntu/+source/xserver-xorg-input-synaptics/+question/176273
#    '''
#
#    try:
#        subprocess.call(['modprobe', '-r', 'psmouse'])
#        subprocess.call(['sleep', '2'])
#        subprocess.call(['modprobe', 'psmouse'])
#
#    except Exception as e:
#        pass

def check_live():
    return os.path.exists('/var/lib/dpkg/info/ubiquity.list')

if __name__ == '__main__':
    # Check root in Linux but not in Cygwin
    if os.getuid() != 0 and not os.path.abspath(__file__).startswith('/cygdrive/'):
       sys.stdout.write(_('You need to be root to run this program.'))
       sys.stdout.flush()
       sys.exit(1)
    #if not check_live():
    #    fix_psmouse()
    logging.basicConfig()   
   
    # Check if 'python-tk' package exists
    pm = PackageManager()
    if not pm.is_package_installed('python-tk'):
        # Try to install the package
        try:
            pm.install_package('python-tk')
        except Exception:
            print 'Package installation failed:', 'python-tk'
            print str(traceback.format_exc())

    # Check if 'python-ldap' package exists
    pm = PackageManager()
    if not pm.is_package_installed('python-ldap'):
        # Try to install the package
        try:
            pm.install_package('python-ldap')
        except Exception:
            print 'Package installation failed:', 'python-ldap'
            print str(traceback.format_exc())            
            
    from controller.MainMenuController import MainMenuController
    controller = MainMenuController()
    controller.show()
