[sssd]
config_file_version = 2
domains = ${ad_domain}
services = nss, pam, pac
debug_level = 0

[nss]

[pam] 
[domain/${ad_domain}]
# La enumeracion no esta recomendada en entornos con muchos usuarios
cache_credentials=true
enumerate = false
default_shell = /bin/bash
override_shell = /bin/bash

${extra_conf_lines}

id_provider = ad
auth_provider = ad
chpass_provider = ad
access_provider = ad

override_homedir = /home/%u
